{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "./src",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ES2020",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/sdk/integrations/langchain/index.ts"
    ]
  }
}
